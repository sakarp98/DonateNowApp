<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    app:cardCornerRadius="0dp"
    android:elevation="90dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:padding = "10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/featured_image"
            android:background="@drawable/post_border"
            />

        <TextView

            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST_TITLE"
            android:textColor="#2C2C2C"
            android:textSize="20dp"
            android:layout_below="@id/featured_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <!-- Left column for user profile image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:padding="0dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"/>

            <!-- Right column for location and date time of post -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/post_title"
                    android:text="Date"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/post_location"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/post_date"
                    android:layout_marginTop="2dp"
                    android:text="Location"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"

                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@id/post_date"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/donation_Raised"
            android:layout_below="@id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textStyle="italic"

            android:text="$170000 Raised out of $200000 "
            android:textColor="@android:color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_desc"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ProgressBar
                android:id="@+id/post_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/click_post_datetime"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="#EAE6E6"
                android:progressTint="#01FA23"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/post_desc"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:src="@drawable/dislike" />

            <TextView
                android:id="@+id/display_no_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop= "2dp"
                android:padding="4dp"
                android:text="0 Likes"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:src="@drawable/comment" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share"
                android:background="#FFFFFF"
                android:layout_weight="2"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>