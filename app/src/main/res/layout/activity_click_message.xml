<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickMessage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="14dp"
        android:background="#FFFFFF"
        >






        <ImageView
            android:id="@+id/click_message_image"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/clickpostborder"

            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:radius="6dp"
            android:src="@drawable/add_post_high" />

        <TextView
            android:id="@+id/click_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/click_message_image"
            android:layout_marginTop="10dp"
            android:text="NEEDY NAME"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:textColor="@android:color/background_dark"

            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/click_message_date"
            android:layout_below="@id/click_message_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"


            android:text="Date"
            android:textColor="@android:color/black"
            />


        <TextView
            android:id="@+id/click_message_desc"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/click_message_date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"


            android:cursorVisible="true"
            android:isScrollContainer="true"
            android:nestedScrollingEnabled="true"
            android:text="This is a description of a needy .This is a description of a needy .."
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:verticalScrollbarPosition="right"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/click_message_amount"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@id/click_message_desc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Amount"


            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="15sp" />






    </RelativeLayout>

</ScrollView>